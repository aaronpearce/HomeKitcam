---
layout: layout.html
title: HomeKit.cam - Every HomeKit camera and more
---
<main class="mx-auto max-w-4xl">
	<nav>
  	  <div class="mx-auto px-8 sm:px-0">
		  <div class="flex h-16 justify-between">
			<div class="flex flex-shrink-0 items-center">
	  			<h1 class="text-2xl sm:text-3xl font-bold">HomeKit.cam</h1>
			</div>
  		  	<div class="sm:ml-6 flex items-center">
				<a href="https://homecam.app" class="ml-6 inline-flex items-center rounded-md bg-amber-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-500">Sponsored by HomeCam</a>
	  	  	</div>
		  </div>
	  </div>
	</nav>

	<ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
	{% for camera in cameras %}
	  <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
		<div class="flex min-w-0 gap-x-4">
		  <img class="h-16 w-16 sm:h-32 sm:w-32 flex-none rounded-full bg-gray-50" src="{{ camera.fields.image.fields.file.url }}?w=128&h=128&fit=pad" />
		  <div class="min-w-0 flex-auto">
			<p class="font-semibold leading-6 text-gray-900">
			  <a href="{{ camera.fields.affiliateUrl if camera.fields.affiliateUrl else camera.fields.productUrl }}">
				<span class="absolute inset-x-0 -top-px bottom-0"></span>
				{{ camera.fields.brand }} {{ camera.fields.name }}
			  </a>
			</p>
			<p class="mt-1 flex text-xs leading-5 text-gray-500">
			  {{ camera.fields.productDescription | renderRichTextAsHtml | safe }}
			</p>
			<div class="py-4">
				<span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-1.5 rounded dark:bg-blue-900 dark:text-blue-300 text-nowrap">{{ camera.fields.resolution }}</span>
				{% if camera.fields.hksv %}
					<span class="bg-yellow-100 text-yellow-800 text-sm font-medium me-2 px-2.5 py-1.5 rounded dark:bg-yellow-900 dark:text-yellow-300 text-nowrap">HKSV</span>
				{% endif %}
				{% if camera.fields.hasNightMode %}
					<span class="bg-zinc-100 text-zinc-800 text-sm font-medium me-2 px-2.5 py-1.5 rounded dark:bg-zinc-900 dark:text-zinc-300 text-nowrap">Night Vision</span>
				{% endif %}
				{% if camera.fields.requiresHub %}
					<span class="bg-rose-100 text-rose-800 text-sm font-medium me-2 px-2.5 py-1.5 rounded dark:bg-rose-900 dark:text-rose-300 text-nowrap">Requires Hub/Bridge</span>
				{% endif %}
				{% if not (camera.fields.localStorage == "None") %}
					<span class="bg-pink-100 text-pink-800 text-sm font-medium me-2 px-2.5 py-1.5 rounded dark:bg-pink-900 dark:text-pink-300 text-nowrap">{{ camera.fields.localStorage | replace("-", "‑") }}</span>
				{% endif %}
				<span class="bg-indigo-100 text-indigo-800 text-sm font-medium me-2 px-2.5 py-1.5 rounded dark:bg-indigo-900 dark:text-indigo-300 text-nowrap">{{ camera.fields.powerSource | join("/") | replace("-", "‑") }}</span>
			</div>
		  </div>
		</div>
		<div class="flex shrink-0 items-center gap-x-4">
		  <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
			<path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
		  </svg>
		</div>
	  </li>
	{% endfor %}
	</ul>

</main>
